{
    "manifest_version": 2,

    "name": "GitHub Stuff",
    "version": "0.1",
    "description": "Utils for GitHub",

    "background": {
        "scripts": ["content.js"],
        "matches": ["https://github.com/*"]
    },

    "options_page": "options.html",
    "options_ui": {
      "chrome_style": true,
      "page": "options.html"
    }, 

    "icons" : {
        "48" : "icons8-github-48.png", 
        "96" : "icons8-github-96.png"
    },

    "permissions":[
        "contextMenus", 
        "storage", 
        "https://api.github.com/"
    ]
}